<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".find"
    android:background="@drawable/gradient">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/myLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleText"
        android:layout_marginTop="15dp"
        android:text="Search for people and friends from school,college and university"
        android:textColor="@color/white"
        android:textSize="20dp"
       android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/search_box_input"
        android:layout_marginTop="35dp"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@id/simpleText"
        android:textColorHint="#000"
        android:padding="15dp"
        android:textSize="20dp"
        android:ems="10"
android:background="@drawable/border_searchbox"
        android:hint="Search..."
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/search_people_friends_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/search_box_input"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:src="@drawable/search"
        android:textColor="#fff"/>
</RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myLayout"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:background="#000"
        ></android.support.v7.widget.RecyclerView>



</RelativeLayout>